# CrewAI Agents Configuration - Generated by CrewForge
# This file defines agent configurations for the crew

{% for agent in agents %}
{{agent.role|lower|regex_replace('[^a-z0-9\s]', '')|replace(' ', '_')|replace('-', '_')}}:
  role: >
    {{agent.role}}
  goal: >
    {{agent.goal}}
  backstory: >
    {{agent.backstory}}
{%- if agent.tools %}
  tools:
{%- for tool in agent.tools %}
    - {{tool}}
{%- endfor %}
{%- endif %}
{%- if agent.max_iter %}
  max_iter: {{agent.max_iter}}
{%- endif %}
{%- if agent.max_rpm %}
  max_rpm: {{agent.max_rpm}}
{%- endif %}
{%- if agent.verbose is defined %}
  verbose: {{agent.verbose|lower}}
{%- endif %}
{%- if agent.allow_delegation is defined %}
  allow_delegation: {{agent.allow_delegation|lower}}
{%- endif %}

{% endfor %}