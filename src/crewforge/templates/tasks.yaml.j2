# CrewAI Tasks Configuration - Generated by CrewForge
# This file defines task configurations for the crew

{% for task in tasks %}
{%- set task_key = task.description[:50]|lower|regex_replace('[^a-z0-9\s]', '')|replace(' ', '_')|truncate(30, true, '')|regex_replace('_+', '_') %}
{{task_key}}_task:
  description: >
    {{task.description}}
  expected_output: >
    {{task.expected_output}}
{%- set agent_key = task.agent_role|lower|regex_replace('[^a-z0-9\s]', '')|replace(' ', '_')|replace('-', '_') %}
  agent: {{agent_key}}
{%- if task.tools %}
  tools:
{%- for tool in task.tools %}
    - {{tool}}
{%- endfor %}
{%- endif %}
{%- if task.output_file %}
  output_file: {{task.output_file}}
{%- endif %}

{% endfor %}